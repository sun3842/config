##### Start Settings #####
set $terminal kitty
set $inner_gap_size 18
set $outer_gap_size 4
set $border_size 4

# Only enable gaps on a workspace when there is at least one container
smart_gaps on

# Activate smart borders (always)
smart_borders on

# Hide edge borders only if there is one window with no gaps
hide_edge_borders smart_no_gaps

# Gaps
gaps inner $inner_gap_size
gaps outer $outer_gap_size

# Border stuff.
default_border pixel $border_size
default_floating_border pixel $border_size


# focus with mouse yes
focus_follows_mouse yes

# default workspace oriantation set vertical
default_orientation horizontal

# default windows laout set tab
workspace_layout default

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod
floating_minimum_size -1 x -1
floating_maximum_size 1080 x 720


# Colors.
