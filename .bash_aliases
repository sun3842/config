# bashrc_alises

# apt pakage install
alias apt-in="sudo apt install"

# apt pakage remove
alias apt-rm="sudo apt remove"

# deb pakage install
alias dpkg-in="sudo dpkg -i"

# deb pakage remove
alias dpkg-rm="sudo dpkg -r"

# update pakages sources
alias apt-sync="sudo apt update"

# upgrade pakages
alias apt-up="sudo apt upgrade"



# view all files in a directory
alias ls="exa -al --header --icons"

# shutdown system
alias sysoff="sudo shutdown now"

# search apt pakages
alias aptsearch="apt-cache search"

# search installed apt pakage
alias aptinsearch="apt list --installed"

